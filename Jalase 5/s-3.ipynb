    "\n",
    "\n",
    "\n",
    "def print_arrow_pattern(n):\n",
    "   \n",
    "    for i in range(n):\n",
    "        print(' ' * (n - i - 1) + '*' * (2 * i + 1))\n",
    "\n",
    "   \n",
    "    for i in range(n - 2, -1, -1):\n",
    "        print(' ' * (n - i - 1) + '*' * (2 * i + 1))\n",
    "\n",
    "\n",
    "number = int(input(\"Enter a number: \"))\n",
    "print_arrow_pattern(number)\n",
    "\n",
    "\n"
   ]
